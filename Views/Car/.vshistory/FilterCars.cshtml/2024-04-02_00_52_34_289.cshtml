@model ImportExcelSql.Models.FilteredCarsViewModel

<!-- Your view content here -->
@{
    ViewData["Title"] = "FilterCars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        padding: 5px;
        font-weight: 500;
    }
</style>

<br />
<br />
<div class="row">
    <form method="post" asp-controller="Car" asp-action="ImportOnly" class="text-left form-validate">
        <h1>
            Display Excel File Records
        </h1>
        <table class="table table-active table-bordered" width="100" name="StaffList" id="StaffList">
            <thead>
                <tr>
                    <th>Car Name</th>
                    <th>Door Number</th>
                    <th>Body Style</th>
                    <th>Engine Location</th>
                    <th>Number Of Cylinders</th>
                    <th>Horse Power</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0;}
                @foreach (var item in Model.FilteredCars)
                {
                    <tr>
                        <td>
                            <input asp-for="@item.carName" name="Model.EmployeeListViewModel[@i].carName" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.doorNumber" name="Model.EmployeeListViewModel[@i].doorNumber" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.bodyStyle" name="Model.EmployeeListViewModel[@i].bodyStyle" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.engineLocation" name="Model.EmployeeListViewModel[@i].engineLocation" class="form-control" />
                        </td>                   
                        <td>
                            <input asp-for="@item.numberOfCylinders" name="Model.EmployeeListViewModel[@i].numberOfCylinders" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.horsePower" name="Model.EmployeeListViewModel[@i].horsePower" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.price" name="Model.EmployeeListViewModel[@i].price" class="form-control" />
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
       
    </form>
</div>

<div class="row">
    <form method="post" asp-controller="Car" asp-action="FilterCars" class="text-left form-validate">
        <h1>
            Filter Cars
        </h1>
        <div class="form-group">
            <label for="make">Make:</label>
            <input type="text" class="form-control" id="make" name="make" placeholder="Enter make">
        </div>
        <div class="form-group">
            <label for="minHorsePower">Min Horsepower:</label>
            <input type="number" class="form-control" id="minHorsePower" name="minHorsePower" placeholder="Enter min horsepower">
        </div>
        <div class="form-group">
            <label for="maxHorsePower">Max Horsepower:</label>
            <input type="number" class="form-control" id="maxHorsePower" name="maxHorsePower" placeholder="Enter max horsepower">
        </div>
        <h1>
            Display Excel File Records
        </h1>
        <table class="table table-active table-bordered" width="100" name="StaffList" id="StaffList">
            <thead>
                <tr>
                    <th>Car Name</th>
                    <th>Door Number</th>
                    <th>Body Style</th>
                    <th>Engine Location</th>
                    <th>Number Of Cylinders</th>
                    <th>Horse Power</th>
                    <th>Price</th>
                </tr>
                <button type="submit" class="btn btn-primary">Filter Cars</button>

            </thead>
            <tbody>
                @{
                    int o = 0;
                }
                @foreach (var item in Model.FilteredCars)
                {
                    <tr>
                        <td>
                            <input asp-for="@item.carName" name="Model.EmployeeListViewModel[@o].carName" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.doorNumber" name="Model.EmployeeListViewModel[@o].doorNumber" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.bodyStyle" name="Model.EmployeeListViewModel[@o].bodyStyle" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.engineLocation" name="Model.EmployeeListViewModel[@o].engineLocation" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.numberOfCylinders" name="Model.EmployeeListViewModel[@o].numberOfCylinders" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.horsePower" name="Model.EmployeeListViewModel[@o].horsePower" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@item.price" name="Model.EmployeeListViewModel[@o].price" class="form-control" />
                        </td>
                    </tr>
                    o++;
                }
            </tbody>
        </table>

    </form>
</div>


